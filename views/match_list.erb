<style type="text/css">
  .match {
    background-color: #AFC8FF
  }

  #new-match {
    background-color: #8EB79B
  }
</style>

<% matches.each do |match| %>
  <a class="match button" href="/matches/<%= match[:id] %>">
    <%= match[:participants].empty? && 'nobody is in here now' || match[:participants].join(' vs. ') %>
  </a><br>
<% end %>

<input class="button" id="new-match" type="button" value="New match">

<script>
  document.addEventListener('DOMContentLoaded', function(){
    document.getElementById('new-match').addEventListener('click', function(){
      axios.post('/matches/create').then(() => {
        location.reload()
      })
    })
  })
</script>

